<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
    {% block body %}
        <div class="container">
            <h1>Rick and Morty Episodes</h1>
            <label for="episode">Select an episode:</label>
            <select name="episode" id="episode" onchange="showEpisodeDetails()">
                {% for episode in episodes %}
                    <option value="{{ episode.url }}">{{ episode.name }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="container">
            <div id="episode-details" class="character-grid-container">
                <!-- Episode details will be displayed here -->
            </div>

        <script>
            function showEpisodeDetails() {
                const episodeUrl = document.getElementById("episode").value;
                fetch(episodeUrl)
                    .then(response => response.json())
                    .then(data => {
                        let episodeDetailsHTML = `
                        <h2>${data.name}</h2>
                        <p>Air Date: ${data.air_date}</p>
                        <p>Episode Code: ${data.episode}</p>
                        <p>Characters:</p>
                        <div class="character-grid">`;

                        const characterPromises = data.characters.map(characterUrl =>
                            fetch(characterUrl)
                                .then(response => response.json())
                                .then(characterData => {
                                    episodeDetailsHTML += `
                                    <div class="character">
                                        <img src="${characterData.image}" alt="${characterData.name}">
                                        <p>${characterData.name}</p>
                                    </div>`;
                                })
                        );

                        Promise.all(characterPromises)
                            .then(() => {
                                episodeDetailsHTML += `</div>`;
                                document.getElementById("episode-details").innerHTML = episodeDetailsHTML;
                            })
                            .catch(error => console.error('Error fetching character details:', error));
                    })
                    .catch(error => console.error('Error fetching episode details:', error));
            }
        </script>
    {% endblock %}




        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    </body>
</html>
