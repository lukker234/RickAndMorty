<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Rick and Morty{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>R</text><text y=%221.3em%22 x=%220.7em%22 font-size=%2276%22 fill=%22%23fff%22>ick</text></svg>">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>

<body>

{% if app.request.attributes.get('_route') != 'index' %}
    <button class="absolute w-fit left-16 top-5 bg-blue-400">
        <a href="javascript:history.go(-1);"><i class="fas fa-arrow-left text-white"></i></a>
    </button>

    <button class="absolute w-fit left-5 top-5 bg-blue-400">
        <a href="{{ path('index') }}"><i class="fas fa-home text-white"></i></a>
    </button>
{% endif %}